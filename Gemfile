# -*- mode: ruby -*-

# A sample Gemfile
source "https://rubygems.org"

ruby '2.1.2'

gem 'rake'

gem 'sinatra'
gem 'sinatra-contrib'

gem 'thin'

gem 'mongo'
gem 'bson_ext'

gem 'rack-session-mongo'

gem 'omniauth'
gem 'omniauth-twitter'

gem 'multi_json'

group :development do
  gem 'sinatra-reloader'
  gem 'pry'
  gem 'pry-doc'
  gem 'pry-byebug'
  gem 'pry-stack_explorer'
end

group :test do
  gem 'rspec'
  gem 'cucumber'

  gem 'rack-test'
  gem 'json_spec'

  gem 'activesupport'
  gem 'syntax'
end
